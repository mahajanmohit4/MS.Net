<Window x:Class="DatabaseDemo.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseDemo"
        mc:Ignorable="d"
        Title="Window4" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DataGridView1" HorizontalAlignment="Left" Height="274" Margin="18,25,0,0" VerticalAlignment="Top" Width="297" RenderTransformOrigin="0.5,0.5" SelectionChanged="DataGridView1_SelectionChanged">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.56"/>
                    <RotateTransform/>
                    <TranslateTransform Y="1.324"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
        </DataGrid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="350,34,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
