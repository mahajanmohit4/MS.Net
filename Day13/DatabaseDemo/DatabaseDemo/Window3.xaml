<Window x:Class="DatabaseDemo.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseDemo"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgEmps" HorizontalAlignment="Left" Height="222" Margin="34,29,0,0" VerticalAlignment="Top" Width="231" RenderTransformOrigin="0.5,0.5">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="6.217"/>
                    <RotateTransform Angle="-3.206"/>
                    <TranslateTransform Y="5.447"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
        </DataGrid>
        <Button Content="fill" HorizontalAlignment="Left" Margin="349,77,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="update" HorizontalAlignment="Left" Margin="354,152,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
