        <Label Content="Name" HorizontalAlignment="Left" Margin="216,26,0,0" VerticalAlignment="Top"/>
        <Label Content="Basic" HorizontalAlignment="Left" Margin="397,26,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.39,0.46"/>
